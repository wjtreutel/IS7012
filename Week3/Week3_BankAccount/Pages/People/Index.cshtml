        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCriminal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IRSReportingNumber)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IDNumber">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.IDNumber">Details</a> |
