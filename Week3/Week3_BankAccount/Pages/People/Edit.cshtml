@page
@model Week3_BankAccount.Pages.People.EditModel

@{
    ViewData["Title"] = "Play God";
}

<h1>Change the Unchangeable. Alter the Inalterable.</h1>

<h4>AccountHolder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccountHolder.IDNumber" />
            <div class="form-group">
                
                <label asp-for="AccountHolder.FirstName" class="control-label"></label>
                <input asp-for="AccountHolder.FirstName" class="form-control" />
                <span asp-validation-for="AccountHolder.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="AccountHolder.LastName" class="control-label"></label>
                <input asp-for="AccountHolder.LastName" class="form-control" />
                <span asp-validation-for="AccountHolder.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="AccountHolder.DateOfBirth" class="control-label"></label>
                <input asp-for="AccountHolder.DateOfBirth" class="form-control" />
                <span asp-validation-for="AccountHolder.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AccountHolder.IsNefarious" /> @Html.DisplayNameFor(model => model.AccountHolder.IsNefarious)
                </label>
            </div>
            <div class="form-group">
                
                <label asp-for="AccountHolder.IRSNumber" class="control-label"></label>
                <input asp-for="AccountHolder.IRSNumber" class="form-control" />
                <span asp-validation-for="AccountHolder.IRSNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
