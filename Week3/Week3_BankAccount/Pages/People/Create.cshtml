@model Week3_BankAccount.Pages.People.CreateModel

        @{
        ViewData["Title"] = "New Account Holder";
        }
        
        <h1>Create</h1>
        
    <h4>New Account Holder</h4>
    <hr />
    <div class="row">
    <div class="col-md-4">
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountHolder.IDNumber" class="control-label"></label>
                <input asp-for="AccountHolder.IDNumber" class="form-control" />
                <span asp-validation-for="AccountHolder.IDNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountHolder.FirstName" class="control-label"></label>
