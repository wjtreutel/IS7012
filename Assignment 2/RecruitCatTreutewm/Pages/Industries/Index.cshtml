@page
@model RecruitCatTreutewm.Pages.Industries.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Industries</h1>

<p>
    <a asp-page="Create">Invent New Industry</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Industry[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Industry) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Disrupt</a>
            </td>
        </tr>
}
    </tbody>
</table>
