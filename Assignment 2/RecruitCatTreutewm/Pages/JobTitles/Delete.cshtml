@page
@model RecruitCatTreutewm.Pages.JobTitles.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete an old Job Title</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.JobTitle.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobTitle.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobTitle.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobTitle.MinimumSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobTitle.MinimumSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobTitle.MaximumSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobTitle.MaximumSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobTitle.RequiredYOE)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobTitle.RequiredYOE)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="JobTitle.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
