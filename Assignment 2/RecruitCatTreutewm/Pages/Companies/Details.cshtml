@page
@model RecruitCatTreutewm.Pages.CompanyFolder.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Company Profile</h1>

<div>
    <h4>@Model.Company.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.OpenPositionID)
        </dt>
        <dd class="col-sm-10">
            @Model.Position
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MinimumSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MinimumSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MaximumSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MaximumSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.IndustryID)
        </dt>
        <dd class="col-sm-10">
            @Model.Industry
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.PositionOpenDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.PositionOpenDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.RejectedCandidateCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.RejectedCandidateCount)
        </dd>
    </dl>

    <h5>Associated Candidates</h5>
    @if (Model.CandidateList.Count > 0) {
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Last Name</th>
                <th scope="col">First Name</th>
                <th scope="col">Target Salary</th>
                <th scope="col">Start Date</th>
                <th scope="col">Job Title</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CandidateList) {
                <tr>
                    <th scope="row"><a href="/Candidates/Details?id=@item.ID">@item.LastName</a></th>
                    <td>@item.FirstName</td>
                    <td>@item.TargetSalary</td>
                    <td>@item.StartDate</td>
                    <td>@Model.PositionHash[item.JobTitleID]</td>
                </tr>
            }
        </tbody>
    </table>
    }
    else { <p>(No associated candidates)</p>}
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
